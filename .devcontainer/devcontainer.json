{
	"name": "Feelpp and ScimBa",
	"build": {
		"dockerfile": "../Dockerfile",     // 指向上层目录的 Dockerfile
		"context": ".."                    // 设置 build context 为项目根目录
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-vscode.cpptools",
				"ms-vscode.cmake-tools",
				"josetr.cmake-language-support-vscode",
				"asciidoctor.asciidoctor-vscode",
				"ms-python.python",
				"ms-toolsai.jupyter"
			],
			"settings": {
				"terminal.integrated.defaultProfile.linux": "bash"
			}
		}
	}
}
